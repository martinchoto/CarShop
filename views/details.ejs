<!DOCTYPE html>
<html lang="en">
  <%- include("partials/head") %>
  <body>
    <%- include("partials/navbar") %>
    <main>
      <section class="car-form">
        <img class="big-pic" src="<%= car.imageurl %>" />
        <div class="text">
          <div class="name-and-price">
            <h2 class="name"><%= car.brand %> <%= car.model %></h2>
            <p class="price"><%= car.price %>$</p>
          </div>
          <div class="desc">
            <span class="main-desc"><%= desc.firstHalf %></span>
            <button class="hide-desc">Read More...</button>
            <br />
            <span class="secret-desc"><%= desc.lastHalf %></span>
          </div>
        </div>
      </section>
      <section class="buy-form">
        <h3>Buy one</h3>
        <div class="grid-input">
          <input
            type="text"
            id="firstName"
            placeholder="First Name"
            name="firstName"
            required
          />
          <input
            type="text"
            id="lastName"
            name="lastName"
            placeholder="Last Name"
            required
          />
          <input
            type="text"
            id="country"
            name="country"
            placeholder="Country"
            required
          />
          <input
            type="text"
            id="address"
            name="address"
            placeholder="Address"
            required
          />
        </div>
        <button class="buy-button" type="submit">Buy</button>
        <p id="ty"></p>
      </section>
      <ul class="reviews">
        <% reviews.forEach((element) => { %>
        <li class="review-item">
          <p class="username">User -> <%= element.writer %></p>
          <p>Grade -> <%= element.review_grade %></p>
          <p>Comment:</p>
          <p class="comment"><%= element.review_text %></p>
        </li>
        <% }); %>
      </ul>
      <section class="post-review">
        <span>Choose a review:</span>
        <form action="/details/add_review" method="post">
          <select class="cars" name="review">
            <option value="Bad Product">Bad Product</option>
            <option value="Ok Product">Ok Product</option>
            <option value="Nice Product">Nice Product</option>
            <option value="Very good Produc">Very good Product</option>
            <option value="Insane Product">Insane Product</option>
          </select>
          <input
            type="text"
            id="username"
            placeholder="Enter your username"
            minlength="3"
            maxlength="25"
            name="username"
          />
          <textarea
            type="text"
            class="textbox"
            placeholder="Write a review here.."
            name="text"
          ></textarea>
          <input type="hidden" name="carId" value="<%= car.id %>" />
          <button class="submit-button" type="submit">Submit</button>
        </form>
      </section>
    </main>
    <%- include("partials/footer") %>
    <script src="/script.js"></script>
  </body>
</html>
